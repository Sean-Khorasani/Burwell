    "SYSTEM_COMMAND": {
      "category": "system",
      "description": "Execute system shell command",
      "parameters": {
        "command": {
          "type": "string",
          "description": "Command to execute",
          "required": true
        }
      }
    },
    "WAIT": {
      "category": "control",
      "description": "Wait for specified duration",
      "parameters": {
        "duration": {
          "type": "duration",
          "description": "Time to wait (ms, s, m)",
          "required": true,
          "validation": "^[0-9]+(ms|s|m)$"
        }
      }
    },
    "EXECUTE_SCRIPT": {
      "category": "control",
      "description": "Execute nested script with result handling",
      "parameters": {
        "script_path": {
          "type": "string",
          "description": "Path to script file to execute",
          "required": true,
          "validation": "^.+\\.json$"
        },
        "result_variable": {
          "type": "string",
          "description": "Variable name to store execution result",
          "required": false,
          "validation": "^[a-zA-Z_][a-zA-Z0-9_]*$"
        },
        "continue_on_failure": {
          "type": "boolean",
          "description": "Continue execution if nested script fails",
          "required": false,
          "default": false
        }
      }
    },
